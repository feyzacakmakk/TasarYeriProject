@model Message
@{
    ViewData["Title"] = "AdminMessageDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>

<body>


    <div class="wrapper wrapper-content">
        <div class="row">
            <div class="col-lg-12 animated fadeInRight">
                <div class="mail-box-header">
                    <h2>
                        MESAJ DETAYI
                    </h2>
                    <div class="mail-tools tooltip-demo m-t-md">


                        <h3>
                            <span class="font-normal">Konu: </span>@Model.Subject
                        </h3>
                        <h5>
                            <span class="float-right font-normal">@Model.MessageDate.ToShortDateString()</span>
                            <span class="font-normal">Kimden: </span>@Model.SenderUser.Name @Model.SenderUser.Surname
                            <br />
                            <span class="font-normal">Kime: </span>@Model.ReceiverUser.Name @Model.ReceiverUser.Surname
                        </h5>
                    </div>
                </div>
                <div class="mail-box">


                    <div class="mail-body">
                        <p>
                            @Model.MessageDetails
                        </p>
                    </div>
                    <div class="mail-body text-right tooltip-demo">
                        <a class="btn btn-sm btn-white" href="/Admin/Message/AdminReplyMessage/@Model.ReceiverId/"><i class="fa fa-reply"></i> Cevapla</a>
                        <a class="btn btn-sm btn-white" href="/Admin/Message/AdminDeleteMessage/@Model.MessageId/"><i class="fa fa-trash-o"></i> Sil</a>
                    </div>
                    <div class="clearfix"></div>


                </div>
            </div>
        </div>
    </div>




    <!-- Mainly scripts -->
    <script src="/AdminTema/js/jquery-3.1.1.min.js"></script>
    <script src="/AdminTema/js/popper.min.js"></script>
    <script src="/AdminTema/js/bootstrap.js"></script>
    <script src="/AdminTema/js/plugins/metisMenu/jquery.metisMenu.js"></script>
    <script src="/AdminTema/js/plugins/slimscroll/jquery.slimscroll.min.js"></script>

    <!-- Flot -->
    <script src="/AdminTema/js/plugins/flot/jquery.flot.js"></script>
    <script src="/AdminTema/js/plugins/flot/jquery.flot.tooltip.min.js"></script>
    <script src="/AdminTema/js/plugins/flot/jquery.flot.spline.js"></script>
    <script src="/AdminTema/js/plugins/flot/jquery.flot.resize.js"></script>
    <script src="/AdminTema/js/plugins/flot/jquery.flot.pie.js"></script>
    <script src="/AdminTema/js/plugins/flot/jquery.flot.symbol.js"></script>
    <script src="/AdminTema/js/plugins/flot/curvedLines.js"></script>

    <!-- Peity -->
    <script src="/AdminTema/js/plugins/peity/jquery.peity.min.js"></script>
    <script src="/AdminTema/js/demo/peity-demo.js"></script>

    <!-- Custom and plugin javascript -->
    <script src="/AdminTema/js/inspinia.js"></script>
    <script src="/AdminTema/js/plugins/pace/pace.min.js"></script>

    <!-- jQuery UI -->
    <script src="/AdminTema/js/plugins/jquery-ui/jquery-ui.min.js"></script>

    <!-- Jvectormap -->
    <script src="/AdminTema/js/plugins/jvectormap/jquery-jvectormap-2.0.2.min.js"></script>
    <script src="/AdminTema/js/plugins/jvectormap/jquery-jvectormap-world-mill-en.js"></script>

    <!-- Sparkline -->
    <script src="/AdminTema/js/plugins/sparkline/jquery.sparkline.min.js"></script>

    <!-- Sparkline demo data  -->
    <script src="/AdminTema/js/demo/sparkline-demo.js"></script>

    <!-- ChartJS-->
    <script src="/AdminTema/js/plugins/chartJs/Chart.min.js"></script>

    <script>
        $(document).ready(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });
    </script>
</body>

</html>

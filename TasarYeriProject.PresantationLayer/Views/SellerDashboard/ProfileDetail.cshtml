@model AppUserEditDto

@{
    ViewData["Title"] = "ProfileDetail";
    Layout = "~/Views/Shared/_SellerDashboardLayout.cshtml";
}

<!DOCTYPE html>
<html>

<body>
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>Profile</h2>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="/SellerDashboard/Index">Ana Sayfa</a>
                </li>
                <li class="breadcrumb-item active">
                    <strong>Profilim</strong>
                </li>
            </ol>
        </div>
        <div class="col-lg-2">
        </div>
    </div>
    <div class="wrapper wrapper-content animated fadeInRight">


        <div class="row m-b-lg m-t-lg">
            <div class="col-md-6">

                <div class="profile-image">
                    <img src="@Model.ImageUrl" class="rounded-circle circle-border m-b-md" alt="profile">
                </div>
                <div class="profile-info">
                    <div class="">
                        <div>
                            <h2 class="no-margins">
                                @Model.Name @Model.Surname
                            </h2>
                            <h4>@Model.Email</h4>
                            @* <small>
                                @Model.AboutText
                            </small> *@
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <table class="table small m-b-xs">
                    <tbody>
                        <tr>
                            <td>
                                <strong>10</strong> Ürünler
                            </td>
                            <td>
                                <strong>22</strong> Followers
                            </td>

                        </tr>

                        <tr>
                            <td>
                                <strong>61</strong> Comments
                            </td>
                            <td>
                                <strong>54</strong> Articles
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <strong>154</strong> Tags
                            </td>
                            <td>
                                <strong>32</strong> Friends
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-md-3">
                <small>Sales in last 24h</small>
                <h2 class="no-margins">206 480</h2>
                <div id="sparkline1"></div>
            </div>


        </div>
        <div class="row">

            <div class="col-lg-12">

                <div class="ibox">
                    <div class="ibox-content">
                        <h3>Hakkımda</h3>

                        <p class="small">
                           @Model.AboutText
                        </p>

                        <p class="small font-bold">
                            <span><i class="fa fa-circle text-navy"></i> Online status</span>
                        </p>

                    </div>
                </div>




            </div>
            @* <div class="col-lg-9">
                <div class="ibox">
                    @await Component.InvokeAsync("UserProductsInformation")
                </div>
            </div> *@

        </div>

        <div class="row">

            <div class="col-lg-12">

                <div class="ibox">
                    <div class="ibox-content">
                        <div class="mb-2 mt-2" style="text-align: center;">
                            <label for="exampleFormControlInput1" class="form-label" style="font-size: 20px;">  PROFİL BİLGİLERİ  </label>

                        </div>
                        <form method="post" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="exampleFormControlInput1" class="form-label">Adınız</label>
                                <input type="text" class="form-control" id="exampleFormControlInput1" asp-for="Name">
                            </div>
                            <div class="mb-3">
                                <label for="exampleFormControlInput1" class="form-label">Soyadınız</label>
                                <input type="text" class="form-control" id="exampleFormControlInput1" asp-for="Surname">
                            </div>
                            <div class="mb-3">
                                <label for="exampleFormControlTextarea1" class="form-label">Hakkında</label>
                                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" asp-for="AboutText">

                            </textarea>
                            </div>
                            @* <div class="mb-3">
                                <label for="exampleFormControlInput1" class="form-label">Image Url</label>
                                <input type="text" class="form-control" id="exampleFormControlInput1" asp-for="ImageUrl">
                            </div> *@
                            <div class="mb-3">
                            <label for="exampleFormControlInput1" class="form-label">Resminiz</label>
                            <input type="file" class="form-control" id="exampleFormControlInput1" asp-for="Image">
                            </div>
                            <div class="mb-3">
                                <label for="exampleFormControlInput1" class="form-label">Telefon Numaranız</label>
                                <input type="text" class="form-control" id="exampleFormControlInput1" asp-for="PhoneNumber">
                            </div>
                            <div class="mb-3">
                                <label for="exampleFormControlInput1" class="form-label">Email</label>
                                <input type="email" class="form-control" id="exampleFormControlInput1" asp-for="Email">
                            </div>

                            <div class="mb-3">
                                <label for="exampleFormControlInput1" class="form-label">Şehir</label>
                                <input type="text" class="form-control" id="exampleFormControlInput1" asp-for="CityName">
                            </div>
                            <div class="mb-3">
                                <label for="exampleFormControlTextarea1" class="form-label">Adresiniz</label>
                                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" asp-for="Address">

                </textarea>
                            </div>
                            <div class="mb-3">
                                <label for="exampleFormControlInput1" class="form-label">Şifreniz</label>
                                <input type="password" class="form-control" id="exampleFormControlInput1" asp-for="Password">
                            </div>
                            <div class="mb-3">
                                <label for="exampleFormControlInput1" class="form-label">Şifre Tekrar</label>
                                <input type="password" class="form-control" id="exampleFormControlInput1" asp-for="ConfirmPassword">
                            </div>
                            <br />
                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                            <br />
                            <button type="submit" class="btn mb-3" style="background-color: orange;">
                                Güncelle
                            </button>
                        </form>
                    </div>
                </div>




            </div>


        </div>


    </div>


    <!-- Mainly scripts -->
    <script src="/Satici_dashboard/js/jquery-3.1.1.min.js"></script>
    <script src="/Satici_dashboard/js/popper.min.js"></script>
    <script src="/Satici_dashboard/js/bootstrap.js"></script>
    <script src="/Satici_dashboard/js/plugins/metisMenu/jquery.metisMenu.js"></script>
    <script src="/Satici_dashboard/js/plugins/slimscroll/jquery.slimscroll.min.js"></script>

    <!-- Custom and plugin javascript -->
    <script src="/Satici_dashboard/js/inspinia.js"></script>
    <script src="/Satici_dashboard/js/plugins/pace/pace.min.js"></script>

    <!-- Sparkline -->
    <script src="/Satici_dashboard/js/plugins/sparkline/jquery.sparkline.min.js"></script>


    <script>
        $(document).ready(function () {


            $("#sparkline1").sparkline([34, 43, 43, 35, 44, 32, 44, 48], {
                type: 'line',
                width: '100%',
                height: '50',
                lineColor: '#1ab394',
                fillColor: "transparent"
            });


        });
    </script>
</body>
</html>
@using X.PagedList
@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common;
@model IPagedList<Product>
@{
    ViewData["Title"] = "ProductsList";
    Layout = "~/Views/Shared/_SellerDashboardLayout.cshtml";
}

<!DOCTYPE html>
<html>

<body>
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>ÜRÜNLER</h2>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="index.html">Ana Sayfa</a>
                </li>
                <li class="breadcrumb-item active">
                    <strong>Ürünler Listesi</strong>
                </li>
            </ol>
        </div>
        <div class="col-lg-2">
        </div>
    </div>

    <div class="wrapper wrapper-content animated fadeInRight">

        <div class="row">
            @foreach (var item in Model)
            {


                <div class="col-md-3">
                    <div class="ibox">
                        <div class="ibox-content product-box">


                            <img style="width: 288px; height:300px;" src="@item.ImageUrl">


                            <div class="product-desc">

                                @if (item.ProductStatus)
                                {
                                    <small class="float-right" style="color:blue">Durum: Aktif</small>
                                }
                                else
                                {
                                    <small class="float-right" style="color:red">Durum: Pasif</small>
                                }
                                <small class="text-muted">KATEGORİ: @item.Category.CategoryName.ToUpper()</small>
                                @if (item.ProductName.Length > 22)
                                {
                                    <a href="/Product/SellerDashboardProductDetail/@item.ProductId/" class="product-name"> @item.ProductName.Substring(0,23)...</a>
                                }
                                else
                                {
                                    <a href="#" class="product-name"> @item.ProductName</a>
                                }



                                <div class="small m-t-xs">
                                    @if (item.ProductDescription.Length <50)
                                    {
                                        @item.ProductDescription
                                        <br />
                                    }
                                    else if (item.ProductDescription.Length < 100)
                                    {
                                        @item.ProductDescription
                                    }
                                    else
                                    {
                                        @item.ProductDescription.Substring(0,item.ProductDescription.Substring(0,100).LastIndexOf(" "));
                                        <small>...</small>
                                    }
                                    
                                    <br/>
                                </div>
                                <span class="product-price">
                                    @item.Price <i class="fa fa-try" aria-hidden="true"></i>
                                </span>
                                
                                <div class="m-t text-righ">

                                    <a href="/Product/SellerDashboardProductDetail/@item.ProductId/" class="btn btn-xs btn-outline btn-primary">Detaya Git <i class="fa fa-long-arrow-right"></i> </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>



            }
            
        </div>
            <br />
        @Html.PagedListPager((IPagedList)Model,page=>Url.Action("SellerDashboardProductList", new {page}), new
            PagedListRenderOptions{
            LiElementClasses= new string[]{"page-item"},
            PageClasses= new string[]{"page-link" }
            })
    </div>

  
    <script src="/admin2/js/jquery-3.1.1.min.js"></script>
    <script src="/admin2/js/popper.min.js"></script>
    <script src="/admin2/js/bootstrap.js"></script>
    <script src="/admin2/js/plugins/metisMenu/jquery.metisMenu.js"></script>
    <script src="/admin2/js/plugins/slimscroll/jquery.slimscroll.min.js"></script>

    <!-- Custom and plugin javascript -->
    <script src="/admin2/js/inspinia.js"></script>
    <script src="/admin2/js/plugins/pace/pace.min.js"></script>
</body>
</html>